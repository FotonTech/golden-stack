{
  "name": "@golden-stack/server",
  "version": "0.0.1",
  "private": true,
  "description": "Foton Golden Stack Server",
  "author": "Foton",
  "main": "src/index.ts",
  "scripts": {
    "build": "rm -rf dist/* && babel src --extensions \".es6,.js,.es,.jsx,.mjs,.ts,.tsx\" --ignore *.spec.js --out-dir dist --copy-files --source-maps --verbose",
    "copy-to-package": "babel-node --extensions \".es6,.js,.es,.jsx,.mjs,.ts,.tsx\" scripts/copySchemaToPackage.js",
    "graphql": "webpack --watch --progress --config webpack.config.js",
    "test": "jest --coverage --forceExit",
    "test:watch": "jest --watch",
    "update-schema": "babel-node --extensions \".es6,.js,.es,.jsx,.mjs,.ts,.tsx\" scripts/updateSchema.js && yarn copy-to-package"
  },
  "dependencies": {
    "@entria/graphql-mongoose-loader": "^4.3.0",
    "@golden-stack/babel": "*",
    "@koa/router": "^8.0.6",
    "core-js": "^3.6.4",
    "dataloader": "^2.0.0",
    "dotenv-safe": "^8.2.0",
    "env-var": "^5.0.0",
    "graphql": "^14.6.0",
    "graphql-playground-middleware": "^1.1.2",
    "graphql-relay": "0.6.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-express": "1.1.0",
    "koa-graphql": "0.8.0",
    "koa-logger": "3.2.1",
    "koa-multer": "^1.0.1",
    "mongoose": "^5.8.10",
    "pretty-format": "^24.9.0",
    "subscriptions-transport-ws": "^0.9.16",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@types/dotenv-safe": "^8.1.0",
    "@types/graphql-relay": "^0.4.9",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-convert": "^1.2.3",
    "@types/koa-cors": "^0.0.0",
    "@types/koa-graphql": "^0.8.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-multer": "^1.0.0",
    "@types/koa__router": "^8.0.2",
    "@types/mongoose": "^5.5.43",
    "@types/node": "^12.12.11",
    "babel-loader": "^8.0.5",
    "mongodb-memory-server": "^6.2.4",
    "reload-server-webpack-plugin": "^1.0.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.8"
  }
}
